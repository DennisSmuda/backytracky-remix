{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s \"build:*\"",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "run-p \"dev:*\"",
    "dev:css": "postcss ./styles/**/*.css --dir ./app/styles --watch",
    "dev:remix": "remix dev",
    "generate:css": "postcss ./styles/**/*.css --dir ./app/styles --env production",
    "test:build": "cross-env NODE_ENV=testing remix build",
    "test:e2e": "cypress open",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "test:start": "cross-env NODE_ENV=production remix-serve ./build",
    "start:netlify": "cross-env NODE_ENV=production netlify dev",
    "typecheck": "tsc -b && tsc -b cypress",
    "prepare": "husky install",
    "postinstall": "npm run generate:css",
    "prebuild": "npm run generate:css"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.6",
    "@netlify/functions": "^1.0.0",
    "@prisma/client": "^4.1.0",
    "@remix-run/netlify": "^1.6.5",
    "@remix-run/node": "^1.6.5",
    "@remix-run/react": "^1.6.5",
    "@tonaljs/tonal": "^4.6.5",
    "bcryptjs": "^2.4.3",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hot-toast": "^2.3.0",
    "remix-utils": "^3.3.0",
    "tone": "^14.7.77"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@remix-run/dev": "^1.6.5",
    "@remix-run/eslint-config": "^1.6.5",
    "@remix-run/serve": "^1.6.5",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/typography": "^0.5.4",
    "@testing-library/cypress": "^10.0.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^28.1.6",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "autoprefixer": "^10.4.7",
    "cypress": "^13.3.2",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.15.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^14.1.0",
    "prisma": "^4.1.0",
    "tailwindcss": "^3.1.6",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  }
}
